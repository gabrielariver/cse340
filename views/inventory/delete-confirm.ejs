<main>
    <h1>Delete <%= inv_make %>
            <%= inv_model %>
    </h1>

    <p>Confirm that you want to delete this vehicle. <strong>This action cannot be undone.</strong></p>

    <form action="/inv/delete/" method="post">
        <label for="inv_make">Make</label>
        <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>" readonly>

        <label for="inv_model">Model</label>
        <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>" readonly>

        <label for="inv_year">Year</label>
        <input type="number" id="inv_year" name="inv_year" value="<%= inv_year %>" readonly>

        <label for="inv_description">Description</label>
        <textarea id="inv_description" name="inv_description" readonly><%= inv_description %></textarea>

        <label for="inv_price">Price</label>
        <input type="number" id="inv_price" name="inv_price" value="<%= inv_price %>" readonly>

        <label for="inv_miles">Miles</label>
        <input type="number" id="inv_miles" name="inv_miles" value="<%= inv_miles %>" readonly>

        <label for="inv_color">Color</label>
        <input type="text" id="inv_color" name="inv_color" value="<%= inv_color %>" readonly>

        <label for="classification_id">Classification</label>
        <%- classificationSelect %>

            <input type="hidden" name="inv_id" value="<%= inv_id %>">
            <button type="submit" class="btn btn-danger">Delete Vehicle</button>
    </form>
</main>